<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".EditWorkArmAct">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_stop"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#1B2942"
        android:src="@drawable/ic_close_white_24dp"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titlepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="8dp"
        android:text="Keep On Track"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitlepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="8dp"
        android:text="Set Goals and Commit"
        android:textColor="#B3B8C0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlepage" />

    <View
        android:id="@+id/divpage"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:background="#25293E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitlepage" />


    <RelativeLayout
        android:id="@+id/fitone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divpage">

        <ImageView
            android:id="@+id/imgpic1"
            android:layout_alignParentStart="true"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/fitpicone" />

        <TextView
            android:layout_toRightOf="@+id/imgpic1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/fitonetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumping Jack"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_toRightOf="@+id/imgpic1"
            android:layout_below="@+id/fitonetitle"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/fitonedesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginners"
            android:textColor="#B3B8C0"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnremove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toLeftOf="@+id/workvalue"
            android:background="@drawable/bgbtnremove"
            android:text="-"
            android:textColor="#FFF"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/workvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toLeftOf="@+id/btnadd"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnadd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bgbtnadd"
            android:text="+"
            android:textColor="#FFF"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fittwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitone">

        <ImageView
            android:id="@+id/imgpic2"
            android:layout_alignParentStart="true"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/fitpictwo" />

        <TextView
            android:layout_toRightOf="@+id/imgpic2"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/fittwotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Knee Push Ups"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_toRightOf="@+id/imgpic2"
            android:layout_below="@+id/fittwotitle"
            android:layout_marginLeft="16dp"
            android:id="@+id/fittwodesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Beginners"
            android:textColor="#B3B8C0"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnlocked"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:background="@drawable/bgbtnlocked"
            android:text="LOCKED"
            android:textColor="#2F375A"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="18sp" />

    </RelativeLayout>


    <View
        android:id="@+id/bgprogress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="#4186F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnexercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Next Workout"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>